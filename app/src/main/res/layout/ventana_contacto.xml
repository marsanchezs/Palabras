<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space style="@style/espacio" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgVC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_words_spanish"
                android:contentDescription="@string/icon" />

            <Space style="@style/espacioVertical" />

            <TextView
                style="@style/texto"
                android:id="@+id/txtContactoVC"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="25sp"/>
        </TableRow>

        <Space style="@style/espacio" />

        <View
            android:id="@+id/linea"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLetra" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imgWhatAppVC"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_whatsapp"
                    android:contentDescription="@string/icon" />

                <Space style="@style/espacioVertical" />
                <Space style="@style/espacioVertical" />

                <ImageView
                    android:id="@+id/imgGmailVC"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_gmail"
                    android:contentDescription="@string/icon" />

                <Space style="@style/espacioVertical" />
                <Space style="@style/espacioVertical" />

                <ImageView
                    android:id="@+id/imgLinkedinVC"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_linkedin"
                    android:contentDescription="@string/icon" />

                <Space style="@style/espacioVertical" />
                <Space style="@style/espacioVertical" />

                <ImageView
                    android:id="@+id/imgGithubVC"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_github"
                    android:contentDescription="@string/icon" />

            </TableRow>

        </LinearLayout>

        <Space style="@style/espacio" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>